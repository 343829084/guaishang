<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/ActivityBackgroundStyleE5"
    android:gravity="center_horizontal"
  >
    <RelativeLayout style="@style/titleBackGroundStyle" >

        <ImageView style="@style/titleBackStyle" />

        <TextView
            style="@style/titleTextStyle"
            android:text="怪商抢单" />
    </RelativeLayout>

    <View style="@style/LineStyle" />


    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:gravity="center">
        <ImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@mipmap/logo"/>
        <TextView
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_login_bg"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="密码重置"
            android:textColor="@color/color_101010"
            android:textSize="@dimen/dp_14"
            android:background="@drawable/passward_reset_bg_rectangle_radius_d31c20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="31dp"
            android:paddingRight="22dp"
            android:layout_marginTop="@dimen/dp_18">

            <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="#101010"
                android:textSize="14dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/phone_et"
                android:layout_width="207dp"
                android:layout_height="31dp"
                android:background="@drawable/bg_shape_login"
                android:hint="手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text_black_color"
                android:textColorHint="@color/text_gray_color"
                android:layout_marginLeft="26dp"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:paddingLeft="31dp"
            android:paddingRight="22dp">

            <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textColor="#101010"
                android:textSize="14dp"
                />
            <EditText
                android:id="@+id/pw_et_1"
                android:layout_width="207dp"
                android:layout_height="31dp"
                android:background="@drawable/bg_shape_login"
                android:hint="输入密码"
                android:paddingLeft="@dimen/dp_10"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/text_black_color"
                android:textColorHint="@color/text_gray_color"
                android:layout_marginLeft="26dp"
                android:textSize="14dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="31dp"
            android:paddingRight="22dp">

            <TextView
                android:id="@+id/lable"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#101010"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:background="@drawable/bg_shape_login"
                android:layout_toRightOf="@+id/lable"
                android:layout_marginLeft="26dp"
                android:gravity="center_vertical"
                >
                <EditText
                    android:id="@+id/check_pw_et"
                    android:layout_width="207dp"
                    android:layout_height="match_parent"
                    android:hint="输入验证码"
                    android:paddingLeft="10dp"
                    android:inputType="phone"
                    android:background="@null"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/text_black_color"
                    android:textColorHint="@color/text_gray_color"
                    android:textSize="14dp" />
                <Button
                    android:id="@+id/check_pw_get_btn"
                    android:layout_width="64dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/gray_rect_background"
                    android:layout_alignRight="@+id/check_pw_et"
                    android:text="获取验证码"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="6dp"
                    android:textColor="#101010"
                    android:textSize="12.3sp" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/release_btn"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="39dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_shape_login_btn"
            android:text="确认"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="14dp" />

    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_login_else"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            >
            <ImageView
                android:id="@+id/image_wechat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="@drawable/share_weixin"/>
            <ImageView
                android:id="@+id/image_qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="32dp"
                android:background="@drawable/share_qq"/>
            <ImageView
                android:id="@+id/image_weibo"
                android:layout_marginLeft="32dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:background="@drawable/share_weibo"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>