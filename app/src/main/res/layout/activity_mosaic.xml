<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d31c20"
        >

    <ImageView
        android:id="@+id/close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/dd_close"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/sure"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/dd_ok"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="马赛克"
            android:textSize="@dimen/sp_16"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/doodle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mosaic_x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:onClick="setMosaicLevel"
            android:text="x1" />

        <Button
            android:id="@+id/btn_mosaic_x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:onClick="setMosaicLevel"
            android:text="x2" />

        <Button
            android:id="@+id/btn_mosaic_x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:onClick="setMosaicLevel"
            android:text="x3" />

    </LinearLayout>

</LinearLayout>